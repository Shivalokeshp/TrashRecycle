<h1>Add Trash Center</h1>
{{#if error}} <span>{{error}}</span>{{/if}}
<form method="POST" action="/user/add">
  <div class="form-group">
    <label>Trash Center Name</label>
    <input type="text" name="id" class="form-control" placeholder="Add Trash Center">
  </div>
  <div class="form-group">
    <label>Recycle Type</label>
    <input type="text" name="first_name" class="form-control" placeholder="Recycle Type">
  </div>
  <div class="form-group">
    <label>locality</label>
    <input type="text" name="last_name" class="form-control" placeholder="locality">
  </div>
  <div class="form-group">
    <label>coordinate latitude</label>
    <input type="text" name="email" class="form-control" placeholder="latitude">
  </div>
  <div class="form-group">
    <label>coordinates longitude</label>
    <input type="text" name="phone" class="form-control" placeholder="longitude">
  </div>
  <input type="submit" class="btn btn-primary" value="Save">
</form>
